@model List<NorthWind.Entities.Category>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

<form  method="post">
    <div>
        Nombre de Categorías:
    </div>
    <div>
        <input type="text" name="categoryName" class="form-control"/>
        <input type="submit" value="Crear" class="btn btn-warning"/>
    </div>
</form>
<hr />
<table class="table table-hover">
    <thead>
    <th>ID</th>
    <th>Name</th>
    </thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.CategoryId</td>
            <td>@c.CategoryName</td>
        </tr>
    }
    </tbody>
</table>
        
       
 

</body>
</html>
