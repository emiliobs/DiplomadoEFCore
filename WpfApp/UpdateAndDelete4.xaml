<Window x:Class="WpfApp.UpdateAndDelete4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="UpdateAndDelete4" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                   <Label>ID Categoría:</Label>
                <TextBox Name="txtId" Margin="10" Width="150"></TextBox>

            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Nombre de la Categoría:</Label>
                <TextBox Name="txtName" Margin="10" Width="150"></TextBox>

            </StackPanel>
            <StackPanel>
                <Button Name="btnUpdate" Content="Actualizar." Width="150" Margin="10" Click="BtnUpdate_OnClick" ></Button>
                <Button Name="btndelete" Content="Eliminar." Width="150" Margin="10" Click="Btndelete_OnClick"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
